{
    "categories": [
      {
        "title": "#### New Features ✅",
        "labels": ["feature"]
      },
      {
        "title": "#### BugFixes 🐛",
        "labels": ["fix"]
      },
      {
        "title": "#### Improved 🎉",
        "labels": ["improvement"]
      },
      {
          "title": "#### Breaking Changes 🛠",
          "labels": ["bchange"]
      },
      {
        "title": "#### Other changes ➕",
        "labels": ["misc"]
      },
      {
        "title": "#### Dependencies 📎",
        "labels": ["dependencies"]
      }
    ],
    "ignore_labels": [
      "ignore"
    ],
    "sort": "ASC",
    "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
    "empty_template": "- no changes",
    "label_extractor": [
      {
        "pattern": "(.) (.+)",
        "target": "$1",
        "flags": "gu"
      },
      {
        "pattern": "\\[Issue\\]",
        "on_property": "title",
        "method": "match"
      }
    ],
    "duplicate_filter": {
      "pattern": "\\[ABC-....\\]",
      "on_property": "title",
      "method": "match"
    },
    "transformers": [
      {
        "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
        "target": "- $4\n  - $6"
      }
    ],
    "max_tags_to_fetch": 200,
    "max_pull_requests": 200,
    "max_back_track_time_days": 365,
    "exclude_merge_branches": [
      "Owner/qa"
    ],
    "tag_resolver": {
      "method": "semver",
      "filter": {
        "pattern": "api-(.+)",
        "flags": "gu"
      }
    },
    "base_branches": ["dev", "master", "main"]
}